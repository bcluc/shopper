<?xml version="1.0" encoding="utf-8"?>
<!--styles.xml-->
<resources>
    <style name="product">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#FF8400</item>
        <item name="android:shadowColor">#40000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">10</item>
    </style>
    <style name="AppEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingLeft">20dp</item>
    </style>
    <style name="by_signing_">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#747980</item>
    </style>

    <style name="fauget">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#40000000</item>
        <item name="colorControlActivated">#FF8400</item>
    </style>
    <style name="list_items">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:shadowColor">#40000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">10</item>
    </style>

    <style name="customRatingBar"
        parent="android:style/Widget.Material.RatingBar.Small">
        <item name="android:minHeight">15dp</item>
        <item name="android:maxHeight">15dp</item>
    </style>
    <style name="roundimageview" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
        <item name="color">@color/white</item>

    </style>

    <style name="avatar" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="color">@color/white</item>
    </style>

    <style name="groupStyleindigo_900_33">
        <item name="android:background">@drawable/rectangle_bg_indigo_900_33</item>
    </style>
    <style name="txtMontserratromanregular10">
