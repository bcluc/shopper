<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:top="-20dp" android:left="-20dp" android:right="0dp">
        <rotate android:fromDegrees="30" android:toDegrees="30"
            android:pivotX="60%" android:pivotY="0%" >
            <shape
                android:shape="rectangle">
                <solid android:color="#143F6B" /> <!-- Màu nền của hình thang vuông -->
                <corners android:radius="70dp"/>
            </shape>
        </rotate>
    </item>
</layer-list>
