<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Định nghĩa viền trên -->
    <item android:top="0dp" android:left="-2dp" android:right="-2dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="0.7dp"

                android:color="#000000" />
        </shape>
    </item>
    <!-- Định nghĩa viền dưới -->
    <item android:bottom="0dp" android:left="-2dp" android:right="-2dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="0.7dp"
                android:color="#000000" />
        </shape>
    </item>
    <!-- Định nghĩa viền 2 bên không màu -->
    <item android:left="0dp" android:right="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
</layer-list>
