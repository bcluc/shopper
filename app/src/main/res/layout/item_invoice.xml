<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">

            <!-- Auto layout, variables, and unit scale are not yet supported -->
            <!-- Auto layout, variables, and unit scale are not yet supported -->
            <LinearLayout
                style="@style/RectangleStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tab_layout"
                android:paddingVertical="5dp">


                <TextView
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:paddingTop="5dp"
                    android:text="YOUR BILLING INFORMATION"
                    android:textColor="@color/black"
                    android:textSize="20dp" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="140dp">

                <View
                    android:id="@+id/rectangle_address_customer"
                    style="@style/RectangleStyle"
                    android:layout_width="match_parent"
                    android:layout_height="105dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="20dp"
                    android:elevation="5dp" />

                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="25dp"
                    android:elevation="10dp"
                    android:src="@drawable/map_icon"
                    app:tint="#FF8400"></ImageView>

                <TextView
                    android:layout_width="91dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="23dp"
                    android:layout_marginBottom="2dp"
                    android:elevation="10dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Address"
                    android:textColor="#FF8400"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/tennguoimua_customer"
                    android:layout_width="362dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="42dp"
                    android:layout_marginTop="47dp"
                    android:elevation="10dp"
                    android:fontFamily="@font/montserrat_lights"
                    android:text="Bui Cuong"
                    android:textColor="@color/black"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/soDT_customer"
                    android:layout_width="362dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="42dp"
                    android:layout_marginTop="67dp"
                    android:elevation="10dp"
                    android:fontFamily="@font/montserrat_lights"
                    android:text="0333333333"
                    android:textColor="@color/black"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/diachi_chitiet_customer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="42dp"
                    android:layout_marginTop="87dp"
                    android:elevation="10dp"
                    android:fontFamily="@font/montserrat_lights"
                    android:text="140/10 Dinh Bo Linh, Phuong 26, Binh Thanh"
                    android:textColor="@color/black"
                    android:textSize="13dp" />

            </FrameLayout>


            <RelativeLayout
                style="@style/RectangleStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp">

                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="25dp"
                    android:elevation="10dp"
                    android:src="@drawable/payment_icon"
                    app:tint="#FF8400"></ImageView>

                <TextView
                    android:id="@+id/txtPayment"
                    android:layout_width="91dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="23dp"
                    android:elevation="10dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Payment"
                    android:textColor="#FF8400"
                    android:textSize="18dp" />

                <LinearLayout
                    android:id="@+id/layoutPhuongThucThanhToan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtPayment"
                    android:elevation="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="42dp"

                        android:elevation="10dp"
                        android:fontFamily="@font/montserrat_lights"
                        android:text="Phuong thuc thanh toan: "
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/phuongthuctt_customer"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"

                        android:elevation="10dp"
                        android:fontFamily="@font/montserrat_lights"
                        android:text="Tien mat"
                        android:textColor="@color/black"
                        android:textSize="13dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutGiaTriDonHang"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/layoutPhuongThucThanhToan"
                    android:elevation="10dp">

                    <TextView
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="42dp"
                        android:elevation="10dp"
                        android:fontFamily="@font/montserrat_lights"
                        android:text="Gia tri don hang (VND): "
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/giatridonhang_customer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"

                        android:elevation="10dp"
                        android:fontFamily="@font/montserrat_lights"
                        android:text="50000"
                        android:textColor="@color/black"
                        android:textSize="13dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutGiamGia"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/layoutGiaTriDonHang"
                    android:elevation="10dp">

                    <TextView
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="42dp"
                        android:elevation="10dp"
                        android:fontFamily="@font/montserrat_lights"
                        android:text="Giảm giá (VND): "
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/discount_customer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"

                        android:elevation="10dp"
                        android:fontFamily="@font/montserrat_lights"
                        android:text="50000"
                        android:textColor="@color/black"
                        android:textSize="13dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutPhiVanChuyen"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/layoutGiamGia"
                    android:elevation="10dp">

                    <TextView
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="42dp"
                        android:elevation="10dp"
                        android:fontFamily="@font/montserrat_lights"
                        android:text="Phí vận chuyển (VND): "
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/phiVanChuyen_customer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:elevation="10dp"
                        android:fontFamily="@font/montserrat_lights"
                        android:text="50000"
                        android:textColor="@color/black"
                        android:textSize="13dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/layoutPhiVanChuyen"
                    android:elevation="10dp">

                    <TextView
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="42dp"
                        android:elevation="10dp"
                        android:fontFamily="@font/montserrat_lights"
                        android:text="Tổng tiền(VND): "
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/TongTien_customer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:elevation="10dp"
                        android:fontFamily="@font/montserrat_lights"
                        android:text="50000"
                        android:textColor="@color/black"
                        android:textSize="13dp" />

                </LinearLayout>

            </RelativeLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/nguoimua_customer"
                    style="@style/RectangleStyle"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="20dp"
                    android:elevation="5dp" />

                <ImageView
                    android:id="@+id/img_avatar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="30dp"
                    android:elevation="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/default_user"
                    app:cardCornerRadius="20dp" />

                <TextView
                    android:id="@+id/tenND_customer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="30dp"
                    android:elevation="10dp"
                    android:fontFamily="@font/montserrat_lights"
                    android:text="Bui Cuong"
                    android:textColor="@color/black"
                    android:textSize="13dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="70dp"
                    android:layout_marginBottom="10dp"
                    android:elevation="10dp">

                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"

                        android:fontFamily="@font/montserrat_lights"
                        android:text="ID: "
                        android:textColor="@color/black"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/maND_customer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="5dp"
                        android:layout_marginEnd="10dp"
                        android:elevation="10dp"
                        android:fontFamily="@font/montserrat_lights"
                        android:text="21522654"
                        android:textColor="@color/black"
                        android:textSize="13dp" />

                </LinearLayout>


            </FrameLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list_sanpham_customer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:gravity="right">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/montserrat_medium"

                    android:text="Total: "
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/total_customer"
                    android:layout_width="98dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/montserrat"
                    android:text="10000000"
                    android:textColor="@color/black"
                    android:textSize="17dp"
                    android:textStyle="italic" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="VND"
                    android:textColor="@color/black"
                    android:textSize="15dp" />
            </LinearLayout>


        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>