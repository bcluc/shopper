<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".authentication.activity.Success">

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        tools:ignore="Mi,MissingConstraints"
        tools:layout_editor_absoluteX="181dp"
        tools:layout_editor_absoluteY="278dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id ="@+id/complete"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/img_check_mark"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="100dp"
            android:src="@drawable/tick_circle"

            tools:layout_editor_absoluteX="139dp"
            tools:layout_editor_absoluteY="105dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="COMPLETE !"
            android:fontFamily="@font/montserrat_medium"
            android:textSize="40dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_marginLeft="58dp"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:fontFamily="@font/montserrat"
            android:text="Your password has been reset ! Please check your email "
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16dp">
        </TextView>

        <Button
            app:cornerRadius="10dp"
            android:id="@+id/btn_verify"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="100dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Continue"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:backgroundTint="@color/orange" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>